{% extends 'layout.twig' %}
{% block content %}
    <body>
    <div class="flex justify-center items-center h-screen">
        <form class="w-full max-w-xs">
            <h1 class="text-3xl font-bold mb-6">Sign up for an account</h1>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                    Your name
                </label>
                <input class="appearance-none w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:text-gray-600"
                       id="name" type="text" placeholder="John"/>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="surname">
                    Your surname
                </label>
                <input class="appearance-none w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:text-gray-600"
                       id="username" type="text" placeholder="Cena"/>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                    Email
                </label>
                <input class="appearance-none w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:text-gray-600"
                       id="email" type="email" placeholder="johncena@example.com"/>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    Password
                </label>
                <input class="appearance-none w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:text-gray-600"
                       id="password" type="password" placeholder="********"/>
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="passwordConfirmation">
                    Confirm password
                </label>
                <input class="appearance-none w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:text-gray-600"
                       id="passwordConfirmation" type="password" placeholder="********"/>
            </div>

            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                    Sign up
                </button>
                <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800"
                   href="/login">
                    Already have an account?
                </a>
            </div>
            <div>
                {% if email is same as (false) %}This email already exists{% endif %}
                {% if password is same as (false) %}Incorrect e-mail or password {% endif %}
                {% if passwordConfirmation is same as (false) %}Passwords do not match{% endif %}
            </div>
        </form>
    </div>
    </body>
{% endblock %}
